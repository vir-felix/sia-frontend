{
	"tags": {
		"allowUnknownTags"      : true,
		"dictionaries"          : ["jsdoc","closure"]
	},
	"source": {
		"include"               : ["app/"],
		"includePattern"        : ".+\\.js(doc)?$",
		"excludePattern"        : "(^|\\/|\\\\)_"
	},
	"plugins": [
		"plugins/markdown"
	],
	"opts": {
		"template"              : "./node_modules/ink-docstrap/template",
		"tutorials"             : "./doc/",
		"package"               : "package.json",
		"readme"                : "README.md",
		"destination"           : "./doc/",
		"recurse"               : true,
		"verbose"               : true
	},
	"templates": {
		"default": {
			"staticFiles": {
				"paths": ["./doc/assets/"]
			}
		},
		"cleverLinks"			: true,
		"monospaceLinks"        : true,
		"systemName"            : "Sia-UI",
		"footer"                : "NebulousLabs",
		"copyright"             : "",
		"navType"               : "vertical",
		"theme"                 : "spacelab",
		"linenums"              : true,
		"collapseSymbols"       : true,
		"inverseNav"            : true,
		"outputSourceFiles"     : true,
		"outputSourcePath"      : true,
		"dateFormat"            : "MM/DD/YYYY",
		"highlightTutorialCode" : true,
		"syntaxTheme"           : "default"
	}
}
